<h2>Compile Error</h2>
<table class="table table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>User</th>
      <th>Problem</th>
      <th>Status</th>
      <th>Language</th>
      <th>Submit Time</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @submission.id %></td>
      <td><%= link_to @submission.user.handle, user_path(@submission.user) %></td>
      <td><center><%= link_to @submission.problem_id, problem_path(@submission.problem_id) %></center></td>
      <td><span class="label label-warning">Compile Error</span></td>
      <td><%= link_to language_list.invert[@submission.language], submission_show_code_path(@submission) %></td>
      <td><%= @submission.created_at.localtime.to_s(:db) %></td>
    </tr>
  </tbody>
</table>
<pre><%= @submission.error.html_safe %></pre>

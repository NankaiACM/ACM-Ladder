<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => "form-horizontal" }) do |f| %>
  <fieldset>
    <legend>Change your password</legend>
    <%= f.input :reset_password_token, :as => :hidden %>
    <%= f.input :password, :label => "New password", :required => true, :autofocus => true %>
    <%= f.input :password_confirmation, :label => "Confirm new password", :required => true %>
  </fieldset>

  <div class="form-actions">
    <%= f.button :submit, "Change my password", :class => "btn btn-warning" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

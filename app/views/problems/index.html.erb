<% if @level_up && current_user.level < Integer(ENV['MAX_LEVEL'])%>
  <%= link_to 'LEVEL UP!', user_level_up_path(current_user), :class => 'btn btn-success pull-right' %>
<% end %>
<h2>Level <%= @current_level %></h2>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th class="span1">ID</th>
      <th class="span2">Source</th>
      <th>Title</th>
      <th class="span1">Status</th>
    </tr>
  </thead>
  <tbody>
    <% @problems.each do |problem| %>
      <tr>
        <td><%= problem.id %></td>
        <td>
          <span class="label label-info"><%= problem.source %></span>
          <span class="badge badge-success"><%= problem.original_id %></span>
        </td>
        <td><%= link_to problem.title, problem %></td>
        <td><center><%= show_status(@status[problem.id]) %></center></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="pagination pagination-centered">
  <ul>
    <% if @current_level == 0 %>
      <li class="disabled"><span>«</span></li>
    <% else %>
      <li>
      <a href="<%= "#{problems_path}?level=#{@current_level - 1}" %>">«</a>
      </li>
    <% end %>
    <li class="disabled"><span>Level</span></li>
    <% (0..Integer(ENV['MAX_LEVEL'])).each do |l| %>
      <% if @user_level < l %>
        <li class="disabled"><span><%= l %></span></li>
      <% elsif @current_level == l %>
        <li class="active"><span><%= "#{l}" %></span></li>
      <% else %>
        <li>
        <a href="<%= "#{problems_path}?level=#{l}" %>"><%= l %></a>
        </li>
      <% end %>
    <% end %>
    <% if @current_level == @user_level || @current_level == Integer(ENV['MAX_LEVEL']) %>
      <li class="disabled"><span>»</span></li>
    <% else %>
      <li>
      <a href="<%= "#{problems_path}?level=#{@current_level + 1}" %>">»</a>
      </li>
    <% end %>
  </ul>
</div>
